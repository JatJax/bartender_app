<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Star Wars Quote App</title>
  </head>
  <body>
    <h1>May Node and Express be with you.</h1>

    <form action="/drinks" method="POST">
      <input type="text" placeholder="name" name="name" />
      <input type="text" placeholder="quote" name="quote" />
      <button type="submit">Submit</button>
    </form>
    <h2> Drinks </h2>
<ul class="drinks">
  <!-- Loop through drinks -->
  <% for(var i = 0; i < drinks.length; i++) {%>
    <li class="quote">
      <!-- Output name from the iterated drink object -->
      <span><%= drinks[i].name %></span>:
      <!-- Output quote from the iterated drink object -->
      <span><%= drinks[i].quote %></span>
    </li>
  <% } %>
</ul>
  </body>
</html>